<?xml version="1.0"?>
<options>

    <section id="general-settings" title="General">
        <category expanded="false" title="Global Page Meta">
            <option name="finesse_page_keywords" type="text">
                <description>Page keywords, separated by comma. (These keywords will be used by the search engines.)</description>
            </option>
            <option name="finesse_page_description" type="textarea">
                <description>Page description</description>
            </option>
        </category>
        <category expanded="false" title="Logo">
            <option name="finesse_header_logo" type="upload-image">
                <description>Upload your website header logo</description>
            </option>
            <option name="finesse_tagline" type="text">
                <description>Tagline</description>
            </option>
        </category>
        <category expanded="false" title="Favicon">
            <option name="finesse_favicon" type="upload-image">
                <description>Upload your website favicon</description>
            </option>
        </category>
        <category expanded="false" title="Search Header">
            <option name="finesse_display_search_header" type="checkbox">
                <description>Display the search field in right of the header menu</description>
                <default_value>on</default_value>
                <suffix>Enable</suffix>
            </option>
        </category>
        <category expanded="false" title="Contact Details">
            <option name="finesse_contact_address" type="text">
                <description>Address</description>
            </option>
            <option name="finesse_contact_email" type="text">
                <description>Email address</description>
            </option>
            <option name="finesse_contact_phone" type="text">
                <description>Phone number</description>
            </option>
            <option name="finesse_display_contact_details_in_header" type="checkbox">
                <description>Display the contact details in the website header</description>
                <default_value>on</default_value>
                <suffix>Enable</suffix>
            </option>
        </category>
        <category expanded="false" title="RSS Settings">
            <option name="finesse_rss_enabled" type="checkbox">
                <description>Enable RSS</description>
                <default_value>on</default_value>
                <suffix>Enabled</suffix>
            </option>
            <option name="finesse_rss_type" type="select">
                <description>RSS Type</description>
                <default_value>rss2_url</default_value>
                <possible_values>
                    <value key="rdf_url">RDF/RSS 1.0 feed</value>
                    <value key="rss_url">RSS 0.92 feed</value>
                    <value key="rss2_url">RSS 2.0 feed</value>
                    <value key="atom_url">Atom feed</value>
                </possible_values>
            </option>
        </category>
        <category expanded="false" title="Enable Responsiveness">
            <option name="finesse_responsive_enabled" type="checkbox">
                <description>Enable responsiveness</description>
                <default_value>on</default_value>
                <suffix>Enable</suffix>
            </option>
        </category>
        <category expanded="false" title="Internationalization">
            <option name="finesse_internationalization_enabled" type="checkbox">
                <description>Enable the internationalization for your website. To manage the translation keys, go &lt;a href="${get_home_url}/wp-admin/tools.php?page=finesse-translation"&gt;here&lt;/a&gt;</description>
                <suffix>Enable</suffix>
            </option>
        </category>
        <category expanded="false" title="File Access Configuration">
            <option name="finesse_file_access_ftp_enabled" type="checkbox">
                <description>Use FTP to access the theme files</description>
                <suffix>Enable</suffix>
            </option>
            <option name="finesse_file_access_ftp_hostname" type="text">
                <description>FTP hostname.</description>
            </option>
            <option name="finesse_file_access_ftp_theme_path" type="text">
                <description>FTP theme path (you can find it from CPanel)</description>
            </option>
            <option name="finesse_file_access_ftp_username" type="text">
                <description>FTP username</description>
            </option>
            <option name="finesse_file_access_ftp_password" type="password">
                <description>FTP password</description>
            </option>
        </category>
        <category expanded="false" title="Tracking Code">
            <option name="finesse_tracking_code" type="textarea">
                <description>Paste your website tracking code (e.g., Google Analytics)</description>
            </option>
        </category>
        <category expanded="false" title="Footer Text">
            <option name="finesse_footer_text" type="textarea">
                <description>Enter text for footer</description>
                <default_value><![CDATA[ Copyright &copy; 2012 Finesse. Created by <a href="http://themeforest.net/user/ixtendo">Ixtendo</a>. ]]></default_value>
            </option>
        </category>
    </section>

    <section id="blog-settings" title="Blog &amp; Portfolio">
        <category expanded="false" title="Blog Settings">
            <option name="finesse_blog_display_post_meta" type="checkbox">
                <description>Display the &quot;Post Meta&quot; information on the left of the each blog post page</description>
                <suffix>Enabled</suffix>
                <default_value>on</default_value>
            </option>
            <option name="finesse_blog_display_related_posts" type="checkbox">
                <description>Display the &quot;Related Posts&quot; section at the end of each blog post page</description>
                <suffix>Enabled</suffix>
                <default_value>on</default_value>
            </option>
            <option name="finesse_blog_display_post_comments" type="checkbox">
                <description>Display the &quot;Comments&quot; section at the end of each blog post page</description>
                <suffix>Enabled</suffix>
                <default_value>on</default_value>
            </option>
        </category>
        <category expanded="false" title="Portfolio Settings">
            <option name="finesse_portfolio_overview_rows_count" type="text">
                <description>The number of portfolio rows in the portfolio overview page</description>
                <default_value>3</default_value>
            </option>
            <option name="finesse_portfolio_display_related_posts" type="checkbox">
                <description>Display the &quot;Related Posts&quot; section at the end of each portfolio page</description>
                <default_value>on</default_value>
            </option>
            <option name="finesse_portfolio_enable_content" type="checkbox">
                <description>Enable body content for each portfolio page</description>
                <default_value>off</default_value>
            </option>
        </category>
    </section>

    <section id="social-settings" title="Social">
        <category expanded="false" title="Twitter Username">
            <option name="finesse_social_twitter_username" type="text">
                <description>Paste your Twitter username (e.g., ixtendo)</description>
            </option>
        </category>
        <category expanded="false" title="Facebook URL">
            <option name="finesse_social_facebook_url" type="text">
                <description>Paste your Facebook URL (e.g., http://www.facebook.com/pages/Ixtendo/326069630745266)</description>
            </option>
        </category>
        <category expanded="false" title="Google +">
            <option name="finesse_social_gplus_url" type="text">
                <description>Paste your Google + URL</description>
            </option>
        </category>
        <category expanded="false" title="Youtube URL">
            <option name="finesse_social_youtube_url" type="text">
                <description>Paste your Youtube URL</description>
            </option>
        </category>
        <category expanded="false" title="Skype URL">
            <option name="finesse_social_skype_url" type="text">
                <description>Paste your Skype URL</description>
            </option>
        </category>
        <category expanded="false" title="Flickr ID">
            <option name="finesse_social_flickr_id" type="text">
                <description>Paste your Flickr ID (e.g., 52617155@N08)</description>
            </option>
        </category>
    </section>

    <section id="layout-settings" title="Layout">
        <category expanded="true" title="Site Layout">
            <option name="finesse_layout_type" type="select">
                <description>Page Layout (default: Wide)</description>
                <default_value>wide</default_value>
                <possible_values>
                    <value key="wide">Wide</value>
                    <value key="boxed">Boxed</value>
                </possible_values>
            </option>
        </category>
    </section>

    <section id="style-settings" title="Styles">
