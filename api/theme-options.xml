                    <value key="../images/background-patterns/boxed/first_aid_kit.png">First Aid Kit</value>
                    <value key="../images/background-patterns/boxed/graphy.png">Graphy</value>
                    <value key="../images/background-patterns/boxed/kuji.png">Kuji</value>
                    <value key="../images/background-patterns/boxed/norwegian_rose.png">Norwegian Rose</value>
                    <value key="../images/background-patterns/boxed/office.png">Office</value>
                    <value key="../images/background-patterns/boxed/px_by_Gre3g.png">PX by Gre3g</value>
                    <value key="../images/background-patterns/boxed/squares.png">Squares</value>
                    <value key="../images/background-patterns/boxed/vichy.png">Vichy</value>
                    <value key="../images/background-patterns/boxed/washi.png">Washi</value>
                    <value key="../images/background-patterns/boxed/classy_fabric.png">Classy Fabric</value>
                    <value key="../images/background-patterns/boxed/farmer.png">Farmer</value>
                    <value key="../images/background-patterns/boxed/low_contrast_linen.png">Low Contrast Linen</value>
                    <value key="../images/background-patterns/boxed/mirrored_squares.png">Mirrored Squares</value>
                    <value key="../images/background-patterns/boxed/nasty_fabric.png">Nasty Fabric</value>
