                    <value key="../images/background-patterns/boxed/soft_wallpaper.png">Soft Wallpaper</value>
                    <value key="../images/background-patterns/boxed/tiny_grid.png">Tiny Grid</value>
                    <value key="../images/background-patterns/boxed/wavecut.png">Wavecut</value>
                    <value key="../images/background-patterns/boxed/whitey.png">Whitey</value>
                </possible_values>
            </option>
            <option name="finesse_boxed_bg_color" type="predefined-colors"  displayCondition="is_boxed_layout_selected">
                <description>Background Color (default: #d9d9d9)</description>
                <default_value>#d9d9d9</default_value>
                <possible_values>
                    <value key="#d9d9d9">Grey</value>
                    <value key="#262626">Dark Grey</value>
                    <value key="#e53c3c">Red</value>
                    <value key="#7eb01a">Green</value>
                    <value key="#4396bf">Blue</value>
                    <value key="#f25824">Orange</value>
                    <value key="#eb7f00">Light Orange</value>
                    <value key="#ce5c76">Pink</value>
                    <value key="#b28eb4">Purple</value>
                    <value key="#1693a5">Teal</value>
                </possible_values>
            </option>
        </category>

        <category expanded="false" title="Text &amp; Links Color (Advanced)">
            <option name="finesse_link_color" type="color">
